<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forgetpassword"
    android:layout_centerInParent="true"
    android:layout_centerHorizontal="true"
    android:background="@drawable/ssbg11">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

<!--        <ImageView-->
<!--            android:id="@+id/imageView"-->
<!--            android:layout_width="141dp"-->
<!--            android:layout_height="60dp"-->
<!--            android:layout_gravity="top"-->
<!--            app:srcCompat="@drawable/sonacollegeoftechnology" />-->

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="140dp"
            android:layout_height="130dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="151dp"
            app:srcCompat="@drawable/ssbg8" />
    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_cp"
        android:layout_width="200dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/forgetpassword">

    </com.airbnb.lottie.LottieAnimationView>

    <TextView
        android:id="@+id/text_cp"
        android:layout_width="300dp"
        android:layout_height="71dp"
        android:layout_below="@+id/lottie_cp"
        android:layout_centerInParent="true"
        android:layout_marginTop="-3dp"
        android:background="#92FFFFFF"
        android:fontFamily="@font/baumans"
        android:gravity="center"
        android:text="Enter your Email Address to get your reset password link"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/username_cp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@id/text_cp"
        android:hint="Enter your Email Address"
        android:padding="15dp"
        app:startIconDrawable="@drawable/email"
        app:boxCornerRadiusTopEnd="@dimen/browser_actions_context_menu_min_padding"
        app:boxCornerRadiusTopStart="@dimen/browser_actions_context_menu_min_padding"
        style="@style/Widget.Material3.TextInputLayout.FilledBox"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ForgetPassEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/roboto_regular"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/forgetpassbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_cp"
        android:layout_marginLeft="120dp"
        android:fontFamily="@font/roboto_regular"
        android:text="Change Password"
        android:backgroundTint="@color/cyellow"
        app:cornerRadius="50dp"

        >

    </com.google.android.material.button.MaterialButton>

</RelativeLayout>