                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chat:"
                    android:textSize="20dp"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">

                    <EditText
                        android:id="@+id/ET_comment_supervisor_net"
                        android:textAlignment="center"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/borderbox"
                        android:textColor="@color/black"
                        android:padding="15dp"
                        android:textSize="15dp"/>

                    <Button
                        android:id="@+id/send_Supervisor_comment_net"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Send"
                        android:background="@drawable/borderbox"
                        android:layout_marginEnd="10dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"/>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:visibility="gone"
                android:id="@+id/LL_comment_admin_net"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ET_comment_admin_net"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:background="@drawable/borderbox"
                    android:textColor="@color/black"
                    android:padding="15dp"
                    android:textSize="15dp"/>

                <Button
                    android:id="@+id/send_Admin_comment_net"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Send"
                    android:background="@drawable/borderbox"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>





    </androidx.coordinatorlayout.widget.CoordinatorLayout>


