<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScannerPage">

  <androidx.coordinatorlayout.widget.CoordinatorLayout

      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <com.google.android.material.appbar.MaterialToolbar
          android:id="@+id/topAppBar"
          style="@style/Widget.MaterialComponents.Toolbar.Primary"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:title="Scanner Page" />

    </com.google.android.material.appbar.AppBarLayout>

  </androidx.coordinatorlayout.widget.CoordinatorLayout>
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="141dp"
        android:layout_height="118dp"
        android:layout_gravity="top"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/sonacollegeoftechnology" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="123dp"
        android:layout_height="102dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="60dp"
        app:srcCompat="@drawable/mapmysona_logo" />
  </LinearLayout>

  <LinearLayout
      android:id="@+id/Scanner"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:orientation="vertical"
      android:gravity="center">


    <ImageView
        android:id="@+id/qrcode"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_above="@+id/scanbutton"
        android:layout_marginTop="30dp"
        android:src="@drawable/qrcode">

    </ImageView>


<!--    <com.google.android.material.button.MaterialButton-->
<!--        android:id="@+id/scanbutton"-->
<!--        android:layout_width="150dp"-->
<!--        android:layout_height="50dp"-->
<!--        android:layout_gravity="center"-->
<!--        android:text="Scan"-->
<!--        app:cornerRadius="50dp"-->
<!--        app:icon="@drawable/qrcode">-->

<!--    </com.google.android.material.button.MaterialButton>-->

    <TextView
        android:id="@+id/textor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_below="@+id/qrcode"
        android:fontFamily="@font/elmessiri">

    </TextView>

<!--    <TextView-->
<!--        android:layout_width="320dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="If QR code is not working click here to complaint manually"-->
<!--        android:textSize="18dp"-->
<!--        android:textColor="@color/black"-->
<!--        android:layout_above="@id/entermanuallytext"-->
<!--        >-->
<!--    </TextView>-->
<!--    -->

    <TextView
        android:id="@+id/entermanuallytext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Scanner"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/elmessiri"
        android:text="Enter Manually"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />
  </LinearLayout>



</RelativeLayout>